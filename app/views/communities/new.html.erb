<h1><%= t('new_community') %></h1>

<% if @community.errors.any? %>
    <ul>
        <% @community.errors.messages.values.each do |msg| %>
            <%= msg.each do |m|%>
                <li><%= m %></li>
            <%end%>
        <%end%>
    </ul>
<%end%>




        <%= form_with scope: :community, url: communities_path, local: true do |form| %> 
            <p>
                <%= form.text_field :name, placeholder: true %>
            </p>

            <p>
                <%= form.text_area :description, placeholder: true%>
            </p>
            <%= form.submit %>
        <% end %>
